{
  "private": true,
  "scripts": {
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "themes/*",
      "plugins/*",
      "examples/*"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@this/eslint-config": "*",
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0",
    "typescript": "^4.0.2"
  }
}
